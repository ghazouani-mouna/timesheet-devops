#!/usr/bin/env groovy

pipeline {

    agent any
    
    tools {
        jdk 'jdk11'
        maven 'M3'
    }

    triggers { pollSCM('*/5 * * * *') }

    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }

    stages {
    
    	stage('Build Stage') { 
    		steps {
	      		echo "hello world"
	    	}
	 	}
	 	
    }

}